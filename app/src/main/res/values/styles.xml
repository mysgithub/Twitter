<resources>

    <!-- Base application theme. -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
    </style>

    <style name="ScreenNameStyle">
        <item name="android:textColor">@color/colorTweetSubText</item>
        <item name="android:textSize">14sp</item>
        <item name="fontPath">fonts/Roboto-Regular.ttf</item>
    </style>
    <style name="BoldNameStyle">
        <item name="android:textSize">16sp</item>
        <item name="fontPath">fonts/Roboto-Bold.ttf</item>
    </style>
    <style name="BodyStyle">
        <item name="android:textColor">@color/colorTweetBody</item>
        <item name="android:textSize">14sp</item>
        <item name="fontPath">fonts/Roboto-Regular.ttf</item>
    </style>
    <style name="BodyRegularStyle">
        <item name="android:textSize">14sp</item>
        <item name="fontPath">fonts/Roboto-Regular.ttf</item>
    </style>

    <style name="EditTextStyle">
        <item name="fontPath">fonts/Roboto-Regular.ttf</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>
